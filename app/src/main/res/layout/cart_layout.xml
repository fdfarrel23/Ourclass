<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:elevation="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@drawable/content_background"
    android:layout_height="120dp"
    android:layout_margin="5dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/Cart_items_image"
        app:riv_corner_radius_bottom_right="0dp"
        app:riv_corner_radius_top_right="0dp"
        app:riv_corner_radius_top_left="20dp"
        app:riv_corner_radius_bottom_left="20dp"
        android:scaleType="centerCrop"
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/content_test"/>
    <LinearLayout
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Cart_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="14dp"
            android:paddingBottom="5dp"
            android:text="Items Title"
            android:textAlignment="textStart"
            android:textColor="@color/header_color"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Cart_item_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="200.000 IDR"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/Cart_item_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="Lunas"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>