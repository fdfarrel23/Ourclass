<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.AccountFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Course_Text_View"
                    android:paddingBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Account"
                    android:textAlignment="textStart"
                    android:textColor="@color/header_color"
                    android:textSize="36sp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.makeramen.roundedimageview.RoundedImageView
                        android:scaleType="centerCrop"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/content_test"
                        app:riv_oval="true"/>

                    <LinearLayout
                        android:paddingTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:paddingBottom="5dp"
                            android:id="@+id/Course_Name_View"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp"
                            android:paddingTop="14dp"
                            android:text="Farrel Agung Dewanto"
                            android:textAlignment="textStart"
                            android:textColor="@color/header_color"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                        <TextView
                            android:paddingBottom="5dp"
                            android:paddingLeft="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Surabaya,Indonesia"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp"
                            android:text="fdfarrel23@gmail.com" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:paddingTop="40dp"
                        android:paddingLeft="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Account Setting"
                        android:textStyle="bold" />

                    <TextView
                        android:paddingBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:paddingTop="14dp"
                        android:text="Account Photo"
                        android:textAlignment="textStart"
                        android:textColor="@color/header_color"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                    <TextView
                        android:paddingBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:paddingTop="14dp"
                        android:text="Change Name"
                        android:textAlignment="textStart"
                        android:textColor="@color/header_color"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                    <TextView
                        android:paddingBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:paddingTop="14dp"
                        android:text="Change Password"
                        android:textAlignment="textStart"
                        android:textColor="@color/header_color"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                    <TextView
                        android:paddingBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:paddingTop="14dp"
                        android:text="Change E-Mail"
                        android:textAlignment="textStart"
                        android:textColor="@color/header_color"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                    <TextView
                        android:paddingTop="40dp"
                        android:paddingLeft="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Support"
                        android:textStyle="bold" />
                    <TextView
                        android:paddingBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:paddingTop="14dp"
                        android:text="About"
                        android:textAlignment="textStart"
                        android:textColor="@color/header_color"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:paddingBottom="20dp"
                    android:gravity="center"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:textColor="@android:color/white"
                        android:background="@drawable/logout_button_background"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LOGOUT"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</layout>